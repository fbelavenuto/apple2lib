	TK2K_HW_RAM_II_BANK_4		:= TK2K_HW_RAM_II_BASE + $C
	TK2K_HW_RAM_II_BANK_5		:= TK2K_HW_RAM_II_BASE + $D
	TK2K_HW_RAM_II_BANK_6		:= TK2K_HW_RAM_II_BASE + $E
	TK2K_HW_RAM_II_BANK_7		:= TK2K_HW_RAM_II_BASE + $F
	
	; Sub bank control
	TK2K_HW_RAM_II_RO_SUB_A		:= TK2K_HW_RAM_II_BASE + $0	; Read from RAM, no writes - Read/Only
	TK2K_HW_RAM_II_WO_SUB_A		:= TK2K_HW_RAM_II_BASE + $1	; Read from ROM, write to RAM - Write/Only
	TK2K_HW_RAM_II_DISABLE_SUB_A	:= TK2K_HW_RAM_II_BASE + $2	; Read from ROM, no writes
	TK2K_HW_RAM_II_RW_SUB_A		:= TK2K_HW_RAM_II_BASE + $3	; Read from RAM, write to RAM - Read/Write
	TK2K_HW_RAM_II_RO_SUB_B		:= TK2K_HW_RAM_II_BASE + $8	; Read from RAM, no writes - Read/Only
	TK2K_HW_RAM_II_WO_SUB_B		:= TK2K_HW_RAM_II_BASE + $9	; Read from ROM, write to RAM - Write/Only
	TK2K_HW_RAM_II_DISABLE_SUB_B	:= TK2K_HW_RAM_II_BASE + $A	; Read from ROM, no writes
	TK2K_HW_RAM_II_RW_SUB_B		:= TK2K_HW_RAM_II_BASE + $B	; Read from RAM, write to RAM - Read/Write
	
